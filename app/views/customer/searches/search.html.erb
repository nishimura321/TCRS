<div class="container mt-3">
  <% if @model == 'Menu' %>
    <div class="row">
      <div class="mx-auto">
        <h2 class="font-weight-bold mb-3"><%= @facility.name %>献立</h2>
      </div>
    </div>
    <div class="row my-5">
  	  <h4 class="ml-3">"<%= @word %>" で検索...</h4>
      <%= render 'customer/menus/index', menus: @records %>
    </div>
  <% elsif @model == 'Facility' %>
    <div class="row my-5">
  	  <h4 class="ml-3">"<%= @word %>" で検索...</h4>
      <%= render 'customer/facilities/index', facilities: @records %>
    </div>
  <% end %>
</div>