<div class="container mt-3">
  <div class="row">
    <div class="mx-auto">
    <h2 class="font-weight-bold mb-5">新規アカウント登録</h2>
    </div>
  </div>

  <div class="row mb-5">
    <div class="col-12 text-center">
      <img src="/assets/account_registration.png" width="80%">
    </div>
  </div>

  <div class="row">
    <div class="col-xl-8 col-lg-8 mx-auto">
    <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <%= render "customer/shared/error_messages", resource: resource %>
      <p class="red">*印の項目は必須項目です。</p>
      <div class="field">
        <%= f.label :"保護者氏名", class: "font-weight-bold" %><span class="red">*</span><br>
        <%= f.label :"(姓)", class: "font-weight-bold" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "name", placeholder: "令和", class: "form-control" %><br>
        <%= f.label :"(名)", class: "font-weight-bold" %>
        <%= f.text_field :first_name, autocomplete: "name", placeholder: "道子", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"フリガナ", class: "font-weight-bold" %><span class="red">*</span><br>
        <%= f.label :"(セイ)", class: "font-weight-bold" %>
        <%= f.text_field :last_name_kana, autocomplete: "name", placeholder: "レイワ", class: "form-control" %><br>
        <%= f.label :"(メイ)", class: "font-weight-bold" %>
        <%= f.text_field :first_name_kana, autocomplete: "name", placeholder: "ミチコ", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"メールアドレス", class: "font-weight-bold" %><span class="red">*</span>
        <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
      </div><br><br>
      <div class="field">
        <%= f.label :"郵便番号(ハイフンなし)", class: "font-weight-bold" %><span class="red">*</span>
        <%= f.text_field :postal_code, autocomplete: "postal-code", placeholder: "0000000", class: "form-control" %>
      </div><br><br>
      <div class="field">
        <%= f.label :"住所", class: "font-weight-bold" %><span class="red">*</span>
        <%= f.text_field :address, autocomplete: "address-line1", placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %>
      </div><br><br>
      <div class="field">
        <%= f.label :"電話番号(ハイフンなし)", class: "font-weight-bold" %><span class="red">*</span>
        <%= f.text_field :telephone_number, autocomplete: "tel", placeholder: "0000000000", class: "form-control" %>
      </div><br><br>
      <div class="field">
        <%= f.label :"パスワード", class: "font-weight-bold" %><span class="red">*</span>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
      <div class="field">
      <%= f.label :"パスワード(確認用)", class: "font-weight-bold" %><span class="red">*</span>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></td>
      </div><br><br>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto">
      <div class="actions">
        <%= f.submit "アカウント登録", class: "btn btn-custom px-4 font-weight-bold" %>
      </div>
    <% end %>
    </div>
  </div>
  <br>

  <div class="row">
    <div class="mx-auto">
    <%= render "customer/shared/links" %>
    <br><br><br>
    </div>
  </div>
</div>

