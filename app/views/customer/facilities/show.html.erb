<div class="container mt-5">
  <div class="row">
    <div class="mx-auto">
    <h2 class="font-weight-bold"><%= @facility.name %>詳細</h2><br>

      <table class="table">
        <tbody>
          <tr>
            <th>施設名</th>
            <td><%= @facility.name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= @facility.name_kana %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td>〒<%= @facility.postal_code %><br>
                <%= @facility.address %>
            </td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @facility.telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @facility.email %></td>
          </tr>
          <tr>
            <th>HP</th>
            <td><%= @facility.website %></td>
          </tr>
          <tr>
            <th>営業日</th>
            <td><%= @facility.business_day %></td>
          </tr>
          <tr>
            <th>営業時間</th>
            <td><%= @facility.business_hours %></td>
          </tr>
          <tr>
            <th>問い合わせ時間</th>
            <td><%= @facility.inquiry_hours %></td>
          </tr>
          <tr>
            <th>休園日</th>
            <td><%= @facility.closed_day %></td>
          </tr>
          <tr>
            <th>保育時間</th>
            <td><%= @facility.childcare_hours %></td>
          </tr>
          <tr>
            <th>受け入れ年齢</th>
            <td><%= @facility.target_age %></td>
          </tr>
          <tr>
            <th>給食の有無</th>
            <td>
              <%= @facility.school_meal %>
              <%= link_to "献立を見る", menus_path(@facility), class: "btn btn-warning px-4" %>
            </td>
          </tr>
          <tr>
            <th>利用料金</th>
            <td><%= @facility.fee %></td>
          </tr>
          <tr>
            <th>施設からのメッセージ</th>
            <td><%= @facility.message %></td>
          </tr>
        </tbody>
      </table><br><br>
    </div>

      <div class="col-12 mt-3 mb-5">
        <h2 class="font-weight-bold">予約状況</h2><br>
        <%= week_calendar events: @reservations do |date, reservations| %>
          <%= date.day %>
        <% end %>
      </div>

      <div class="mt-3 mx-auto">
        <%= link_to "戻る", :back, class: "btn btn-outline-warning px-4 mr-5" %>
        <%= link_to "予約へ進む", new_reservation_path(facility_id: @facility.id), class: "btn btn-warning px-4" %>
      </div>
  </div>
</div>