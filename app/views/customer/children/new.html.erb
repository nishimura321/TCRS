<div class="container mt-5">
  <div class="row">
    <div class="mx-auto">
    <h2>お子さま情報登録</h2><br>

    <%= form_with model: @child, url: children_path, method: :post do |f| %>
      <p>*印の項目は必須項目です。</p>
      <p>【お子さま情報】</p>
      <div class="field">
        <%= f.label :"お子さま氏名*" %><br>
        <%= f.label :"(姓)" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "name", placeholder: "令和", class: "form-control" %><br>
        <%= f.label :"(名)" %>
        <%= f.text_field :first_name, autocomplete: "name", placeholder: "花子", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"フリガナ*" %><br>
        <%= f.label :"(セイ)" %>
        <%= f.text_field :last_name_kana, autocomplete: "name", placeholder: "レイワ", class: "form-control" %><br>
        <%= f.label :"(メイ)" %>
        <%= f.text_field :first_name_kana, autocomplete: "name", placeholder: "ハナコ", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"生年月日*" %><br>
        <%= f.date_select :birthday, class: "form-control"  %><br>
      </div><br>
      <div class="field">
        <%= f.label :"性別*" %><br>
        <%= f.radio_button :male, "true" %>
        <%= f.label :male_true, "男" %>
        <%= f.radio_button :male, "false" %>
        <%= f.label :male_false, "女" %>
      </div><br>

      <p>【成育状況】</p>
      <div class="field">
        <%= f.label :"平熱" %><br>
        <%= f.text_field :normal_body_temperature, placeholder: "36.5", class: "form-control" %>℃<br>
      </div><br>
      <div class="field">
        <%= f.label :"発熱時は" %><br>
        <%= f.text_field :fever, placeholder: "37.5", class: "form-control" %>℃で連絡<br>
      </div><br>
      <div class="field">
        <%= f.label :"熱性痙攣を起こしたことはありますか？*" %><br>
        <%= f.radio_button :has_febrile_seizure, "true" %>
        <%= f.label :has_febrile_seizure_true, "有" %>
        <%= f.radio_button :has_febrile_seizure, "false" %>
        <%= f.label :has_febrile_seizure_false, "無" %>
      </div><br>
      <div class="field">
        <%= f.label :"熱性痙攣が起きた時の詳細をご記入ください。" %><br>
        <%= f.text_area :febrile_seizure_details, placeholder: "初めて起こした年齢、その時の熱が何℃かなど", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"脱臼を起こしたことはありますか？*" %><br>
        <%= f.radio_button :has_dislocation, "true" %>
        <%= f.label :has_dislocation_true, "有" %>
        <%= f.radio_button :has_dislocation, "false" %>
        <%= f.label :has_dislocation_false, "無" %>
      </div><br>
      <div class="field">
        <%= f.label :"脱臼の詳細についてご記入ください。" %><br>
        <%= f.text_area :dislocation_details, placeholder: "どこを何回いつ頃か", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"アレルギーはありますか？*" %><br>
        <%= f.radio_button :has_allergy, "true" %>
        <%= f.label :has_allergy_true, "有" %>
        <%= f.radio_button :has_allergy, "false" %>
        <%= f.label :has_allergy_false, "無" %>
      </div><br>
      <div class="field">
        <%= f.label :"アレルギーの詳細をご記入ください。" %><br>
        <%= f.text_area :allergy_details, placeholder: "どこ、何に、症状など", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"授乳状況について選択してください。" %><br>
        :breastfeeding_status<br>
      </div><br>
      <div class="field">
        <%= f.label :"授乳量や時間などの詳細をご記入ください。" %><br>
        <%= f.text_area :breastfeeding_amount, placeholder: "何CCくらいで何分で飲み終わるか、何時間おきかなど", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"授乳後の状況について選択してください。" %><br>
        :situation_after_breastfeeding<br>
      </div><br>
      <div class="field">
        <%= f.label :"離乳食後のミルクは？" %><br>
        :milk_situation_after_baby_food<br>
      </div><br>
      <div class="field">
        <%= f.label :"離乳食後のミルクの量は？" %><br>
        <%= f.number_field :amount_of_milk_after_baby_food, placeholder: "100", class: "form-control" %>CC<br>
      </div><br>
      <div class="field">
        <%= f.label :"離乳食の現在の進み具合は？" %><br>
        :baby_food_progress<br>
      </div><br>
      <div class="field">
        <%= f.label :"食欲について選択してください。" %><br>
        :appetite<br>
      </div><br>
      <div class="field">
        <%= f.label :"お子さまの好きな食べ物をご記入ください。" %><br>
        <%= f.text_area :favorite_food, autocomplete: "", placeholder: "レイワ", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"お子さまの嫌いな食べ物をご記入ください。" %><br>
        <%= f.text_area :hated_food, autocomplete: "", placeholder: "レイワ", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"食べ方を選択してください。" %><br>
        :how_to_eat<br>
      </div><br>
      <div class="field">
        <%= f.label :"食事をする時間は？" %><br>
        <%= f.number_field :meal_time, placeholder: "30", class: "form-control" %>分<br>
      </div><br>
      <div class="field">
        <%= f.label :"寝かせ方は？(複数選択科可)" %><br>
        <%= f.text_field :how_to_lay_it_down, autocomplete: "", placeholder: "レイワ", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"寝つきは？" %><br>
        <%= f.text_field :falling_asleep, autocomplete: "", placeholder: "レイワ", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"寝起きは？" %><br>
        <%= f.text_field :waking_up, autocomplete: "", placeholder: "レイワ", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"寝る姿勢は？(複数選択可)" %><br>
        <%= f.text_field :sleeping_position, autocomplete: "", placeholder: "レイワ", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"熟睡度は？" %><br>
        <%= f.text_field :is_deep_sleep, autocomplete: "", placeholder: "レイワ", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"寝る時の癖はありますか？" %><br>
        <%= f.text_field :habits_when_sleeping, autocomplete: "", placeholder: "レイワ", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"おむつの状況について選択してください。" %><br>
        <%= f.text_field :diaper_usage, autocomplete: "", placeholder: "レイワ", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"かぶれについて選択してください。" %><br>
        <%= f.text_field :is_sensitive_to_rash, autocomplete: "", placeholder: "レイワ", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"排尿は？" %><br>
        <%= f.text_field :urination, autocomplete: "", placeholder: "レイワ", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"排便は？" %><br>
        <%= f.text_field :defecation, autocomplete: "", placeholder: "レイワ", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"排便の回数についてご記入ください。" %><br>
        <%= f.text_field :number_of_defecation, autocomplete: "", placeholder: "レイワ", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"好きな遊びは何ですか？" %><br>
        <%= f.text_field :favorite_game, autocomplete: "", placeholder: "レイワ", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"好きな玩具はありますか？" %><br>
        <%= f.text_field :favorite_toy, autocomplete: "", placeholder: "レイワ", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"かかりつけ医療機関の名前は？" %><br>
        <%= f.text_field :hospital_name, autocomplete: "", placeholder: "レイワ", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"かかりつけ医療機関の電話番号は？" %><br>
        <%= f.text_field :hospital_telephone_number, autocomplete: "", placeholder: "レイワ", class: "form-control" %><br>
      </div><br>
      <div class="field">
        <%= f.label :"その他連絡事項があればご記入ください。" %><br>
        <%= f.text_field :memo, autocomplete: "", placeholder: "レイワ", class: "form-control" %><br>
      </div><br>

      <%= f.submit "お子さま登録", class: "btn btn-warning px-4" %>
    <% end %><br><br><br>
    </div>
  </div>
</div>