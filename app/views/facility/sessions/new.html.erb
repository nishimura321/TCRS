<div class="container mt-5">
  <div class="row">
    <div class="mx-auto">
    <h2 class="font-weight-bold">施設管理者ログイン</h2>

      <%= form_with model: @facility, url: facility_session_path do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス", class: "font-weight-bold" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div><br>

        <div class="field">
          <%= f.label :password, "パスワード", class: "font-weight-bold" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div><br><br>

        <div class="actions">
          <%= f.submit "ログイン", class: "font-weight-bold btn btn-warning px-4" %>
        </div>
      <% end %>

    <%= render "facility/shared/links" %>
    </div>
  </div>
</div>

