<div class="container mt-5">
  <div class="row">
    <div class="col-12 text-center">
    <h2 class="font-weight-bold mb-5">予約一覧</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-10 mx-auto">
      <table class ="table border border-black">
        <thead>
          <tr>
            <th class="table-secondary align-middle", style="width: 10%;">予約ID</th>
            <th class="table-secondary align-middle", style="width: 23%;">予約日</th>
            <th class="table-secondary align-middle", style="width: 20%;">保護者氏名</th>
            <th class="table-secondary align-middle", style="width: 20%;">お子さま氏名</th>
            <th class="table-secondary align-middle", style="width: 13%;">ステータス</th>
            <th class="table-secondary align-middle", style="width: 14%;"></th>
          </tr>
        </thead>
        <% @reservations.each do |reservation| %>
        <tbody>
          <tr>
            <td class="align-middle", style="width: 10%;"><%= reservation.id %></td>
            <td class="align-middle", style="width: 23%;"><%= reservation.day.strftime('%Y年%m月%d日 ') %><%= japanese_day(reservation.day) %></td>
            <td class="align-middle", style="width: 20%;"><%= reservation.customer.last_name %><%= reservation.customer.first_name %></td>
            <td class="align-middle", style="width: 20%;"><%= reservation.child.last_name %><%= reservation.child.first_name %></td>
            <td class="align-middle", style="width: 13%;"><% if reservation.is_valid_reservation %>
                <span>予約確定</span>
                <% else %>
                <span class="text-secondary font-weight-bold">キャンセル</span>
                <% end %>
            </td>
            <td class="align-middle", style="width: 14%;"><%= link_to "詳細", facility_reservation_path(reservation.id), class: "btn btn-warning px-3" %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>

  <div class="row mt-5">
    <div class="mx-auto">
      <%= paginate @reservations %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="mx-auto">
      <%= link_to "戻る", :back, class: "btn btn-outline-warning px-4" %>
    </div>
  </div>
</div>