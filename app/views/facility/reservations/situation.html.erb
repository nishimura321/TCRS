<div class="container mt-3">
  <div class="row">
    <div class="mx-auto">
    <h2 class="font-weight-bold"><%= @facility.name %>予約状況</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-12 mt-3 mb-5">
      <%= week_calendar events: @reservations do |date, reservations| %>
        <%= date.day %>
      <% end %>
    </div>
  </div>

  <div class="row mt-3 mb-5">
    <div class="mx-auto mb-5">
      <%= link_to "戻る", :back, class: "btn btn-outline-secondary px-4 mr-5" %>
    </div>
  </div>

</div>