<%= form_with url: facility_search_path, local: true, method: :get do |f| %>
  <div class="row mt-5">
    <div class="col-12 ml-3">
      <div class="search_form">
        <%= f.label :"日付：", class: "font-weight-bold mr-2" %>
        <%= f.text_field :word, placeholder: "2024-01", class: "py-1 px-2 mr-3" %>
        <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"], ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
        <%= f.hidden_field :model, value: 'Menu' %>
        <%= f.hidden_field :facility, value: current_facility.id %>
        <%= f.submit "検索", class: "btn btn-custom px-4 font-weight-bold ml-3" %>
      </div>
    </div>
  </div>
<% end %>