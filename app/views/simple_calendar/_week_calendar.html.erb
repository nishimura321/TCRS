<div class="simple-calendar">
  <div class="calendar-heading">
    <h5 class="mt-3 mb-5 font-weight-bold text-center"><%= start_date.year %>年 <%= t('date.abbr_month_names')[start_date.month] %></h5>

    <div class="row">
      <div class="col-12">
        <%= link_to t('simple_calendar.previous', default: '＜＜前週'), calendar.url_for_previous_view %>
        <% if calendar.number_of_weeks == 1 %>
          <span class="calendar-title"><%= t('simple_calendar.week', default: '1週間') %></span>
        <% else %>
          <span class="calendar-title"><%= t('simple_calendar.week', default: '1週間') %></span>
        <% end %>
        <%= link_to t('simple_calendar.next', default: '翌週＞＞'), calendar.url_for_next_view %>
      </div>
      <div class="col-12 text-right">
        <span>⚪︎：予約可　×：予約不可　ー：休園</span>
      </div>
    </div>
    <% reservations = Reservation.where(facility_id: @facility.id, is_valid_reservation: true) %>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>時間</th>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <td></td>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(passed_block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &passed_block) %>
              <% else %>
                <% passed_block.call day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
        <% times.each do |time| %>
          <tr>
            <td><%= time %></td>
            <% week.each do |day| %>
            <% if day.wday == 0 || day.wday == 6 || is_holiday?(day) %>
            <td>
              <%= '-' %>
            </td>
            <% else %>
            <td>
              <%# start_time = Time.zone.parse("#{day} #{time}:00") %>
              <%# end_time = start_time.since(30.minutes) %>
              <%# reservation_count = reservations.where(start_time: (start_time...end_time), is_valid_reservation: true).size %>
              <%# if reservation_count >= 2 %>
              <% if check_reservation(reservations, day, time) %>
                <%= '×' %>
              <% else %>
                <%= '○' %>
              <% end %>
            </td>
            <% end %>
            <% end %>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>