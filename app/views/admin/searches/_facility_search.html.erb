<div class="container mt-3 mb-3">
  <%= form_with url: admin_search_path, local: true, method: :get do |f| %>
    <div class="row">
      <div class="col-xl-11 col-lg-11 mx-auto">
        <div class="search_form">
          <%= f.text_field :word, placeholder: "施設名、住所、電話番号など", class: "py-1 mr-3 mb-3", style: "width: 220px" %>
          <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"], ["後方一致","backward_match"], ["部分一致","partial_match"]]), style: "padding: 6px,0px" %>
          <%= f.hidden_field :model, value: 'Facility' %>
          <%= f.submit "検索", class: "btn btn-custom px-4 font-weight-bold ml-3" %>
        </div>
      </div>
    </div>
  <% end %>
</div>