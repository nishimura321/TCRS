<div class="container mt-3">
  <div class="row">
    <div class="mx-auto">
      <h2 class="font-weight-bold mb-5">施設一覧</h3>
    </div>
  </div>

  <%= render 'admin/searches/facility_search' %>

  <div class="row mb-3">
    <div class="col-xl-11 col-lg-11 text-right ml-4">
      <%= link_to "施設新規登録", new_admin_facility_path, class: "font-weight-bold btn btn-custom px-4" %>
    </div>
  </div>

<%= render 'index', facilities: @facilities %>

  <div class="rowmt-5 mb-5">
    <div class="mx-auto">
      <%= paginate @facilities %>
    </div>
  </div>

  <div class="row mt-5 mb-5">
    <div class="mx-auto">
      <%= link_to "戻る", :back, class: "btn btn-outline-secondary px-4" %>
    </div>
  </div>
</div>
